# change window focus within space
cmd + alt - j : yabai -m window --focus south
cmd + alt - k : yabai -m window --focus north
cmd + alt - h : yabai -m window --focus west
cmd + alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
cmd + alt - s: yabai -m display --focus west
cmd + alt - g: yabai -m display --focus east

# rotate layout clockwise
shift + cmd + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + cmd + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + cmd + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + cmd + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
shift + cmd + alt - b : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + cmd + alt - m : yabai -m space --balance

# swap windows
shift + cmd + alt - j : yabai -m window --swap south
shift + cmd + alt - k : yabai -m window --swap north
shift + cmd + alt - h : yabai -m window --swap west
shift + cmd + alt - l : yabai -m window --swap east

# move window and split
ctrl + cmd + alt - j : yabai -m window --warp south
ctrl + cmd + alt - k : yabai -m window --warp north
ctrl + cmd + alt - h : yabai -m window --warp west
ctrl + cmd + alt - l : yabai -m window --warp east

# move window to display left and right
shift + cmd + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + cmd + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
shift + cmd + alt - p : yabai -m window --space prev;
shift + cmd + alt - n : yabai -m window --space next;

# move window to space #
shift + cmd + alt - 1 : yabai -m window --space 1;
shift + cmd + alt - 2 : yabai -m window --space 2;
shift + cmd + alt - 3 : yabai -m window --space 3;
shift + cmd + alt - 4 : yabai -m window --space 4;
shift + cmd + alt - 5 : yabai -m window --space 5;
shift + cmd + alt - 6 : yabai -m window --space 6;
shift + cmd + alt - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + cmd + alt - q : yabai --stop-service
ctrl + cmd + alt - s : yabai --start-service
ctrl + cmd + alt - r : yabai --restart-service
